<Page x:Class="BorAutoProjectail.Pages.AddPages.AddSells"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BorAutoProjectail.Pages.AddPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddSells">

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Grid.Column="0">
                <TextBox HorizontalAlignment="Center" Text="{Binding id}" Height="20" Width="150" Margin="5"/>
                <TextBox HorizontalAlignment="Center" Text="{Binding id_client}" Height="20" Width="150" Margin="5"/>
                <TextBox HorizontalAlignment="Center" Text="{Binding id_diller}" Height="20" Width="150" Margin="5"/>
                <TextBox HorizontalAlignment="Center" Text="{Binding id_car}" Height="20" Width="150" Margin="5"/>
                <TextBox HorizontalAlignment="Center" Text="{Binding date_sell}" Height="20" Width="150" Margin="5"/>
                <Button x:Name="btnAdd" Content="Добавить / Изменить" Height="20" Width="150" Margin="5" Click="btnAdd_Click"/>
                <Button x:Name="Btn_Back" Background="IndianRed" Content="Назад" Height="20" Margin="5" Grid.Row="1" Width="150" Click="Btn_Back_Click" Foreground="White"/>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <TextBlock Text="ID" Height="20" Margin="5"/>
                <TextBlock Text="ID клиента" Height="20" Margin="5"/>
                <TextBlock Text="ID диллера" Height="20" Margin="5"/>
                <TextBlock Text="ID машины" Height="20" Margin="5"/>
                <TextBlock Text="Дата продажи" Height="20" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
